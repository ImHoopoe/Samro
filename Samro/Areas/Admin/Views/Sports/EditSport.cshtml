@model WinWin.DataLayer.Entities.Sport.Sport

@{
    ViewData["Title"] = "ویرایش ورزش";
}

<div class="container mt-4">
    <h2>ویرایش ورزش</h2>

    <form asp-action="EditSport" method="post" class="mt-3">
        <input type="hidden" asp-for="SportId" />
        <input type="hidden" asp-for="ParentId" />

        <div class="mb-3">
            <label asp-for="SportName" class="form-label">نام ورزش</label>
            <input asp-for="SportName" class="form-control" />
            <span asp-validation-for="SportName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-warning">ثبت تغییرات</button>
        <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}