@model IEnumerable<WinWin.DataLayer.Entities.Sport.Sport>

@{
    ViewData["Title"] = "مدیریت ورزش‌ها";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>لیست ورزش‌ها</h2>
        <a class="btn btn-primary align-self-start" asp-action="CreateSport">افزودن ورزش جدید</a>
    </div>

    <table class="table table-bordered table-hover text-center align-middle">
        <thead class="table-dark">
            <tr>
                <th>شناسه</th>
                <th>نام ورزش</th>
                <th>نام رشته</th>
                <th>عملیات</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var group in Model.Where(b => b.ParentId == null))
            {
                <tr>
                    <td>@group.SportId</td>
                    <td>
                        <div class="d-flex justify-content-between align-items-center">
                            <span>@group.SportName</span>
                            <span>
                                <a asp-area="Admin" asp-controller="Sports" asp-action="EditSport" asp-route-id="@group.SportId" class="btn btn-link">
                                    <i class="fa fa-edit"></i>
                                </a>
                                <button class="btn btn-link" data-id="@group.SportId">
                                    <i class="fa fa-times"></i>
                                </button>
                            </span>
                        </div>
                    </td>
                    <td>
                        @if (Model.Any(bg => bg.ParentId == group.SportId))
                        {
                            <ul class="list-unstyled ms-4">
                                @foreach (var sg in Model.Where(bg => bg.ParentId == group.SportId))
                                {
                                    <li>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span>@sg.SportName</span>
                                            <span>
                                                <a asp-area="Admin" asp-controller="Sports" asp-action="EditSport" asp-route-id="@sg.SportId" class="btn btn-link">
                                                    <i class="fa fa-edit"></i>
                                                </a>
                                                <button class="btn btn-link" data-id="@sg.SportId">
                                                    <i class="fa fa-times"></i>
                                                </button>
                                            </span>
                                        </div>
                                    </li>
                                }
                            </ul>
                        }
                    </td>
                    <td>
                        <a class="btn btn-sm btn-primary" asp-area="Admin" asp-controller="Sports" asp-action="CreateSubSport" asp-route-id="@group.SportId">افزودن زیر گروه</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
