
@model WinWin.DataLayer.DTOS.CreateBlogGroupViewModel
@using Microsoft.AspNetCore.Mvc.Rendering
@{
    ViewData["Title"] = "افزودن زیر گروه جدید";
    Layout = "~/Views/Shared/AdminProfile/AdminProfileLayout.cshtml";
}

<div class="container-fluid py-4">
    <!-- Breadcrumb -->
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb bg-light rounded-3 p-2">
            <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="BlogGroups" asp-action="Index">مدیریت گروه‌بندی بلاگ‌ها</a></li>
            <li class="breadcrumb-item active" aria-current="page">@ViewData["Title"]</li>
        </ol>
    </nav>

    <div class="row justify-content-center">
        <div class="col-12 col-md-6">
            <div class="card shadow-sm p-4">
                <h5 class="card-title mb-4 text-center">@ViewData["Title"]</h5>
                <form asp-action="CreateSubBlogGroup" method="post" novalidate>
                    <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                    <input asp-for="ParentId" type="hidden" />

                    <div class="form-floating mb-3">
                        <input asp-for="BlogGroupName" class="form-control" id="BlogGroupName" placeholder="عنوان زیر گروه" aria-describedby="NameHelp" />
                        <label for="BlogGroupName">عنوان زیر گروه</label>
                        <div id="NameHelp" class="form-text">نام زیر گروه را وارد کنید.</div>
                        <span asp-validation-for="BlogGroupName" class="invalid-feedback"></span>
                    </div>

                    <div class="d-grid gap-2">
                        <button type="submit" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-1"></i> افزودن
                        </button>
                        <a asp-area="Admin" asp-controller="BlogGroups" asp-action="Index" class="btn btn-outline-secondary btn-lg">
                            <i class="bi bi-arrow-left me-1"></i> بازگشت
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}