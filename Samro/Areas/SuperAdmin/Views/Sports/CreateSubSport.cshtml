@model WinWin.DataLayer.Entities.Sport.Sport

@{
    ViewData["Title"] = "افزودن زیرگروه";
    var parentId = ViewBag.ParentId;
}

<div class="container mt-4">
    <h2>افزودن زیرگروه برای ورزش</h2>

    <form asp-action="CreateSubSport" method="post" class="mt-3">
        <input type="hidden" name="parentId" value="@parentId" />

        <div class="mb-3">
            <label asp-for="SportName" class="form-label">نام زیرگروه</label>
            <input asp-for="SportName" class="form-control" />
            <span asp-validation-for="SportName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">ثبت زیرگروه</button>
        <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}