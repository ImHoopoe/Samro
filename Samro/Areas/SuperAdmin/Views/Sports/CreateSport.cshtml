@model WinWin.DataLayer.Entities.Sport.Sport

@{
    ViewData["Title"] = "افزودن ورزش جدید";
}

<div class="container mt-4">
    <h2>افزودن ورزش جدید</h2>

    <form asp-action="CreateSport" method="post" class="mt-3">
        <div class="mb-3">
            <label asp-for="SportName" class="form-label">نام ورزش</label>
            <input asp-for="SportName" class="form-control" />
            <span asp-validation-for="SportName" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary">ثبت</button>
        <a asp-action="Index" class="btn btn-secondary">بازگشت</a>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}