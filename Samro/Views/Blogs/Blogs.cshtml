@using WinWin.Core.Tools.PublicTools
@model WinWin.DataLayer.DTOS.ShowBlogsViewModel

<section id="LastBlogsSection" class="section">
    <div class="container pt-5">
        <div class="d-flex justify-content-lg-center mb-4">
            <h2 class="bordered-heading fw-bold text-center">مقالات</h2>
        </div>

        <div class="row g-4">
            @foreach (var blog in Model.Blogs)
            {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card blog-card h-100 shadow-sm border-0">
                            <img src="/images/BlogThumbs/thumb/@blog.Thumbnail" class="card-img-top" alt="@blog.Title" loading="lazy">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@blog.Title</h5>
                                <p class="card-text flex-grow-1">@blog.ShortDescription</p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <small class="text-muted">@blog.PublishDate.ToShamsi()</small>
                                    <a href="@Url.Action("ShowBlog", "Blogs", new { id = blog.BlogId })" class="btn btn-sm">
                                        <i class="bi bi-arrow-left"></i>
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
            }
        </div>

        <!-- Pagination -->
        <nav aria-label="صفحه‌بندی مقالات" class="mt-5">
            <ul class="pagination justify-content-center">
                @* Previous *@
                <li class="page-item @(Model.PageNumber == 1 ? "disabled" : "")">
                    <a class="btn btn-outline-primary" href="@Url.Action("Blogs", new { page = Model.PageNumber - 1, pageSize = Model.Count })" aria-label="قبلی">
                        <span aria-hidden="true">&laquo;</span>
                    </a>
                </li>

                @* Page numbers *@
                @for (int i = 1; i <= Model.TotalPages; i++)
                {
                        <li class="page-item @(i == Model.PageNumber ? "active" : "")">
                            <a class="btn btn-primary mx-3" href="@Url.Action("Blogs", new { page = i, pageSize = Model.Count })">
                            @i
                            </a>
                        </li>
                }

                @* Next *@
                <li class="page-item @(Model.PageNumber == Model.TotalPages ? "disabled" : "")">
                    <a class="btn btn-outline-primary" href="@Url.Action("Blogs", new { page = Model.PageNumber + 1, pageSize = Model.Count })" aria-label="بعدی">
                        <span aria-hidden="true">&raquo;</span>
                    </a>
                </li>
            </ul>
        </nav>

        <div class="d-flex justify-content-end mt-3">
            <a href="@Url.Action("Blogs","Blogs", new { page = 1, pageSize = Model.TotalRecords })"
               class="fw-bold text-white d-flex align-items-center text-decoration-none bordered-heading">
                همه مقالات
                <i class="fas fa-arrow-left ms-2"></i>
            </a>
        </div>
    </div>
</section>
