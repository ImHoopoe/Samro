@model List<WinWin.DataLayer.Entities.ChatHub.Room>

<div class="container mt-5" dir="ltr">
    <div class="row">
        <div class="col-12">
            <div id="roomsList" class="rooms-list">
                
                    @foreach (var room in Model)
                    {
                        <a class="text-decoration-none" asp-controller="Chat" asp-action="ChatRoom" asp-route-id="@room.RoomId">
                            <div class="room-card card shadow-sm mb-3 @(room.RoomId == ViewBag.roomId ? "bg-secondary" : "")">
                                <div class="card-body d-flex align-items-center">
                                    <div class="avatar-container">
                                        <img src="/images/Users/@room.User2.Avatar" alt="Avatar" class="avatar rounded-circle" />
                                    </div>

                                    <div class="room-info ms-3">
                                        <h5 class="room-name mb-1">@room.RoomName</h5>
                                        <p class="text-muted mb-0">@room.User1.UserName و @room.User2.UserName</p>
                                    </div>
                                </div>
                            </div>
                        </a>

                    }
                
                
            </div>
        </div>
    </div>
</div>