@{
    ViewData["Title"] = "خطا";
    Layout = null;
}

<!DOCTYPE html>
<html lang="fa" dir="rtl">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- Required References -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/gh/rastikerdar/vazirmatn@v33.003/Vazirmatn-font-face.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <style>
        :root {
            --gray-dark: #181716;
            --red: #E31E24;
            --light-gray: #F5F5F5;
        }

        body {
            background-color: var(--gray-dark)!important;
            font-family: Vazirmatn, sans-serif;
        }

        .error-card {
            background: white;
            border-radius: 1rem;
            box-shadow: 0 .5rem 1rem rgba(0,0,0,.15) !important;
        }

        .btn-outline-primary
        {
            background-color: transparent !important;
            border-color: var(--red) !important;
            color: var(--red) !important;
        }

        .btn-outline-primary:hover {
            background-color: var(--red) !important;
            border-color: var(--red) !important;
            color: white !important; 
        }

        .decorative-shape {
            color: var(--light-gray);
            z-index: 0;
        }

        @@media (max-width: 768px) {
            .main-heading {
                font-size: 5rem !important;
            }
        }
    </style>
</head>
<body>
    <div class="container min-vh-100 d-flex align-items-center justify-content-center">
        <div class="row justify-content-center w-100">
            <div class="col-12 col-md-10 col-lg-8 text-center">

                <!-- Top Decoration -->
                <div class="position-relative mb-5">
                    <svg class="decorative-shape position-absolute top-0 start-50 translate-middle-x"
                         width="200" height="200" viewBox="0 0 200 200">
                        
                    </svg>
                    <h1 class="main-heading display-1 fw-bold" style="color: var(--red);">
                        404
                    </h1>
                </div>

                <!-- Main Content -->
                <div class="error-card border-0 py-4 px-3">
                    <h2 class="h1 mb-3 text-gray-dark">صفحه مورد نظر پیدا نشد!</h2>
                    <p class="lead mb-4 text-muted">
                        صفحه‌ای که به دنبال آن هستید وجود ندارد یا در حال توسعه است.
                    </p>
                    <a href="/" class="btn btn-outline-primary btn-lg py-2 px-4">
                        <i class="bi bi-arrow-left ms-2"></i>
                        بازگشت به صفحه اصلی
                    </a>
                </div>

                <!-- Bottom Decoration -->
                <svg class="mt-5 decorative-shape" width="120" height="24" viewBox="0 0 120 24">
                    <circle cx="12" cy="12" r="12" fill="currentColor" />
                    <circle cx="60" cy="12" r="12" fill="currentColor" />
                    <circle cx="108" cy="12" r="12" fill="currentColor" />
                </svg>
            </div>
        </div>
    </div>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>