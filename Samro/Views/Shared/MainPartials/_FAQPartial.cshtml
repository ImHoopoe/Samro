<style>
    /* استایل‌های پایه برای کارت سوالات */
    .card-item {
        margin-bottom: 15px;
        display: none; /* پیش‌فرض همه سوالات مخفی */
    }

        /* نمایش 5 سوال اول */
        .card-item:nth-child(-n+5) {
            display: block;
        }

    /* نمایش همه سوالات وقتی کلاس show-all فعال است */
    .show-all .card-item {
        display: block;
    }

    /* استایل دکمه سوالات */
    .card-item-btn {
        padding: 15px;
        width: 100%;
        text-align: right;
        cursor: pointer;
        display: flex;
        justify-content: space-between;
        align-items: center;
    }

    /* استایل محتوای پاسخ */
    

    /* استایل دکمه نمایش بیشتر/کمتر */
    #showMoreBtn {
        padding: 10px 25px;
        cursor: pointer;
    }

    /* مدیریت آیکون‌ها */
    .minus-icon {
        display: none;
    }
</style>
<script>
    document.addEventListener('DOMContentLoaded', function() {
        const showMoreBtn = document.getElementById('showMoreBtn');
        const cardContent = document.getElementById('card-content');

        // مدیریت نمایش/پنهان کردن سوالات بیشتر
        showMoreBtn.addEventListener('click', function() {
            cardContent.classList.toggle('show-all');

            if (cardContent.classList.contains('show-all')) {
                showMoreBtn.textContent = 'نمایش سوالات کمتر';
            } else {
                showMoreBtn.textContent = 'نمایش سوالات بیشتر';
            }
        });

        // مدیریت آکاردئون سوالات
        const cardItems = document.querySelectorAll('.card-item');
        cardItems.forEach(item => {
            const btn = item.querySelector('.card-item-btn');
            const description = item.querySelector('.card-item-description');
            const plusIcon = btn.querySelector('.plus-icon');
            const minusIcon = btn.querySelector('.minus-icon');

            btn.addEventListener('click', () => {
                const isOpen = description.style.display === 'block';

                description.style.display = isOpen ? 'none' : 'block';
                plusIcon.style.display = isOpen ? 'block' : 'none';
                minusIcon.style.display = isOpen ? 'none' : 'block';
            });
        });
    });
</script>