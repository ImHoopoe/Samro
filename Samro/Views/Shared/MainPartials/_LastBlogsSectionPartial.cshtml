@using WinWin.Core.Tools.PublicTools
@model List<WinWin.DataLayer.Entities.BlogBlogGroup.Blog>

<section id="LastBlogsSection" class="section">
    <div class="container pt-5 ">
        <div class="d-flex justify-content-lg-center">
            <h2 class="bordered-heading fw-bold text-center">آخرین مقالات</h2>
        </div>
        <div class="container">
            <div class="row g-4">


                @foreach (var blog in Model)
                {
                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="card blog-card h-100 shadow-sm border-0 ">
                            <img src="@blog.Thumbnail" class="card-img-top" alt="تصویر مقاله">
                            <div class="card-body d-flex flex-column">
                                <h5 class="card-title">@blog.Title</h5>
                                <p class="card-text flex-grow-1">@blog.ShortDescription</p>
                                <div class="d-flex justify-content-between align-items-center mt-3">
                                    <small class="text-muted">@blog.PublishDate.ToShamsi()</small>
                                    <a href="#" class="btn btn-sm"><i class="bi bi-arrow-left"></i></a>
                                </div>
                            </div>
                        </div>
                    </div>

                }
                



            </div>
        </div>

        <div class="d-flex justify-content-end">
            <a href="#" class="fw-bold text-white d-flex align-items-center text-decoration-none bordered-heading">
                همه مقالات
                <i class="fas fa-arrow-left ms-2"></i>

            </a>
        </div>
    </div>
    
</section>